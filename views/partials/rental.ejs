<% if (imageUrl) { %>
    <img src="../<%= imageUrl %>" class="card-img-top" alt="Photo of <%= headline %>">
<% } %>
<div class="card-body">
    <h4 class="card-title" style="font-size: 2.5vmin"><%= headline %></h4>
    <p class="card-text" style="font-size: 2vmin">Sleeps <%= numSleeps %>
        | <%= numBedrooms %>BR <%= numBathrooms %>BA |
        $<%= pricePerNight%>
        /night</p>
    <p class="card-text" style="font-size: 2vmin"><%=city%>, <%=province%></p>
    <% if(role === "customer"){ %>
    <a href="/rentals/add-rental/<%=_id%>">Rent</a>
    <% } %>
</div>
