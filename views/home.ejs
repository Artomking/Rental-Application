<div class="hero">
    <img class="blurry" src="hero.jpg" alt="Hero Image">
    <div class="hero-text">
        <h2>Make your dreams come true with Rento</h2>
        <a href="/sign-up">
            <button class="button">Start now</button>
        </a>
    </div>

</div>

<div style="background-color: #0d223b;">
    <div class="container" style="background-color: #007bff;">
        <div class="row">
            <div class="col-4 content-item">
                <img alt="plane" src="paper-plane.png" width="50px" height="50px">
                <h3>Go anywhere</h3>
                <p>We've got you covered wherever</p>
            </div>
            <div class="col-4 content-item">
                <img alt="diamond" src="diamond.png" width="50px" height="50px">
                <h3>Gain on investment</h3>
                <p>Earn easy money by renting out properties</p>
            </div>
            <div class="col-4 content-item">
                <img alt="gear" src="settings.png" width="50px" height="50px">
                <h3>Gear up</h3>
                <p>Safe lodging after an adventure</p>
            </div>
        </div>
    </div>
</div>


<div class="featured">
    <h2>Featured Rentals</h2>
    <div class="container">
        <div class="row">
            <% featuredRentals.forEach((rental, index) => { %>
            <div class="<%= "col-sm-4"%>">
                <div class="rental-item card bg-indigo" style="margin-bottom: 10px">
                    <%- include("partials/rental", rental) %>
                </div>
            </div>
                <% if ((index + 1) % 3 === 0) { %>
        </div>
        <div class="row">
            <% } %>
            <% }); %>
        </div>
    </div>
</div>
